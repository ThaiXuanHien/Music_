<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageviewbackgroudplaylist"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        android:layout_marginRight="8dp"
        android:adjustViewBounds="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/custom_backgroud_banner">

    </View>

    <ImageView
        android:id="@+id/imageviewplaylist"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/imageviewbackgroudplaylist"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:elevation="6dp">

    </ImageView>

    <TextView
        android:id="@+id/textviewTenPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageviewplaylist"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/imageviewplaylist"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="AAAAAAAAAAAAAAAAA"
        android:textColor="#fff"
        android:textSize="13sp"
        android:textStyle="bold">

    </TextView>
</RelativeLayout>