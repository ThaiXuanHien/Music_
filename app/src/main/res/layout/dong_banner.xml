<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageviewbackgroudbanner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY">

    </ImageView>

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/custom_backgroud_banner">

    </View>

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageviewbackgroudbanner">

        <ImageView
            android:id="@+id/imageviewbanner"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp">

        </ImageView>

        <TextView
            android:id="@+id/textviewtitlebannerbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imageviewbanner"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imageviewbanner"
            android:text="Em cua ngay hom nay"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textviewtitlebannerbaihat"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/imageviewbanner">

            <TextView
                android:id="@+id/textviewnoidung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:maxLines="2"
                android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:textColor="#fff"
                android:textSize="13sp">

            </TextView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>